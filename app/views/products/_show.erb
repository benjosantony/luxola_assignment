
<h2 class="content-area-heading"><%=product.name %> (S$<%=product.price %>)</h2>
<div class="well">
  <p> <%= product.description %> </p>
  <div class="row container">
    <td><%= link_to 'Edit', edit_product_path(product) , {class:'btn btn-default', remote:true}%></td>
